<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPalegreen">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/login_login"
            android:gravity="right"/>
        <TextView
            android:id="@+id/dialog_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="title"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:background="@color/colorPalegreen"
            android:visibility="visible" />
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="say something to we"
        android:hint="您的支持是我们前进的动力!"
        android:textColor="@color/colorBlank"
        android:textSize="18sp"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="72dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_bg_palegreen"
            android:textColor="@color/colorWhite"
            android:text="确定"
            android:gravity="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="72dp"
            android:layout_height="42dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/colorWhite"
            android:text="取消"
            android:background="@drawable/btn_bg_palegreen"
            android:gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>