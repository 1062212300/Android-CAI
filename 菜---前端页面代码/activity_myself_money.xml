<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPalegreen">
        <ImageView
            android:id="@+id/myself_money_return"
            android:src="@drawable/returnlogo"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:text="我的钱包"
            android:layout_marginLeft="23dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/meself_money_zhufubao"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/money_zhifubao"/>
    <ImageView
        android:id="@+id/meself_money_money"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/money_money"/>
    <ImageView
        android:id="@+id/meself_money_weixinzhufu"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/money_weixin"
/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorDarkGray"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:text="第三方服务"
    android:textColor="@color/colorMoney"
    android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/meself_money_meituan"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/money_meituan" />

        <Button
            android:id="@+id/meself_money_baiduwaimai"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:background="@drawable/money_baiduwaimai" />

        <Button
            android:id="@+id/meself_money_eleme"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/money_eleme" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorDarkGray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/meself_money_map"
        android:layout_marginLeft="30dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/money_map"/>

    <Button
        android:id="@+id/meself_money_chihe"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:background="@drawable/money_chihe"/>
    <Button
        android:id="@+id/meself_money_shop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/money_shop"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorDarkGray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/meself_money_gongyi"
            android:layout_marginLeft="30dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/money_gongyi"/>

        <Button
            android:id="@+id/meself_money_weather"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:background="@drawable/money_weather"/>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>