<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorDarkGray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/home_shuizhuroupian1"
                android:id="@+id/hg_img1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                />
            <TextView
                android:text="九转大肠"
                android:id="@+id/hg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPalegreen"
                android:textSize="30sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="aaaaaaaaaaa"
                android:id="@+id/hg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorGinger"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorDarkGray"
            />
    </LinearLayout>


    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorDarkGray"
        />
</LinearLayout>
